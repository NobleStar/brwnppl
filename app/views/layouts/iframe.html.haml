%html
  %head{:prefix => "og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# brwnppl: http://ogp.me/ns/fb/brwnppl#" }
    = yield(:head)
    %title Brwnppl
    <!--[if IE]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    = stylesheet_link_tag    'application'
    = javascript_include_tag 'application'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/handlebars.js/1.0.0.beta6/handlebars.min.js'
    = csrf_meta_tags
  %body
    #wrapper
      = render partial: 'shared/home/header'
      = yield

      %footer#footer
      = javascript_include_tag "Story/StoryController"

  :javascript
    $('.thumb_').click(function(event) {
      event.preventDefault()
      story_id = $(event.target).closest('#storyControls').data('story-id')
      story = new Brwnppl.StoryController(story_id)
      story.like($(this))
    });

    $('#storyControls .comments').click( function(event) {
      $('.commentsDropdown').slideToggle(400);
    });