!!!
%html
  %head
    %title= yield(:title) || Brwnppl
    <!--[if IE]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    %link{ :rel => 'shortcut icon', :href => 'assets/favicon.png'}
    = stylesheet_link_tag    'application'
    = stylesheet_link_tag    'http://fonts.googleapis.com/css?family=Fenix'
    = stylesheet_link_tag    'http://fonts.googleapis.com/css?family=Paytone+One'
    = javascript_include_tag 'application'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/handlebars.js/1.0.0.beta6/handlebars.min.js'
    = javascript_include_tag 'http://js.pusher.com/1.12/pusher.min.js'
    = csrf_meta_tags

  %body
    %img#help{:src => '/assets/help-brwnppl.png', :style => "margin-bottom: 20px; margin-top: -208px; right: -27px; z-index: -100; top: 50%; position: fixed; width: 222px;"}
    
    #wrapper
      = render partial: 'shared/home/header'
      = yield

      %footer#footer
        = render partial: 'shared/google_analytics'
        = render partial: 'shared/templates/notification'
        = render partial: 'shared/templates/story_viewer'
        = render partial: 'shared/templates/single_comment'
        = render partial: 'shared/uservoice'
        = javascript_include_tag 'User/User'
        = javascript_include_tag 'Story/StoryController'
        = javascript_include_tag 'Notification/NotificationController'
        = javascript_include_tag 'StoryViewer/StoryViewer'
        = javascript_include_tag 'Push/Pusher'
        = content_for :footer_scripts
