!!!
%html
  %head
    %title= yield(:title) || Brwnppl
    <!--[if IE]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    %meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %link{ :rel => 'shortcut icon', :href => '/assets/favicon.png'}
    = stylesheet_link_tag    'application'
    = javascript_include_tag 'application'
    = yield(:head)

  %body
    = render partial: 'shared/home/header'
    = render partial: 'shared/home/login'
    = render partial: 'shared/home/sharer'
    = render partial: 'shared/flash_messages'

    = render partial: 'handlebars/story'
    = render partial: 'handlebars/login'
    = render partial: 'handlebars/pagination'
    = render partial: 'handlebars/user_profile'

    = yield

    %footer
      = render partial: 'shared/home/footer'
