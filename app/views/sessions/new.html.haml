- content_for(:title) do
  Login | Brwnppl

:css
  #CompleteAccount {
    margin-left: 0px;
  }

#content
  .content

    .setupAccount
      .header
        %h1 Login to Brwnppl

      - if flash[:notice].present?
        .alert.alert-success
          %ul
            %li= flash[:notice]

      - if flash[:alert].present?
        .alert.alert-error
          %ul
            %li= flash[:alert]

      = form_tag sessions_path, :class => 'RegisterForm', :id => "CompleteAccount" do
        %ul.fields
          %li.field
            = text_field_tag :email, nil, :placeholder => "email"

          %li.field
            = password_field_tag :password, nil, :placeholder => 'password'

        .buttons
          %button.Button.WhiteButton.Button13.ContrastButton Login
          %span
            %a{:href => '/password_resets/new'}
              Forgot Password?
          %span
            = "&nbsp | &nbsp".html_safe
          %span
            %a{:href => '/users/new'}
              New User? Sign up here.