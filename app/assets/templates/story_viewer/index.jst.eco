<div class='fader'></div>
<div class="storyViewerBoxContainer">
  <div class='storyViewerBox'>
    <a href='#' class='storyViewerClose'> </a>
    <div class='mediaGutter'>
      <% if @story.get('html'): %>
        <%- @story.get('html') %>
      <% else if @story.get('image'): %>
        <img src="<%- @story.get('image') %>" >
      <% end %>
    </div>

    <div class='commentsGutter'>

      <div class="commentsRoll">

        <div class="userInfo">
          <div class='commentAvatar'>
            <img src='<%= @story.get('user')["avatar"] %>' >
          </div>

          <h3><%= @story.get('user')["name"] %></h3>

          <p><%= @story.get('title') %></p>
          <p>Posted about <%= @story.get('posted_ago') %> ago</p>
        </div>

        <div id='comments'>
          
          <% for comment in @story.get('comments'): %>
            
            <div id='comment'>
              <div id='commenterAvatar'>
                <img src='<%= comment.avatar %>' height='32px' width='32px'>
              </div>
              <div id="commentText"><%= comment.content %></div>
            </div>

            <div class="clear"></div>

          <% end %>

          <div class="clear"></div>

        </div>

        <div id="comment">
          <div id="commenterAvatar">
            <img src='<%= @story.get('user')["avatar"] %>' width='32px' height='32px'>
          </div>

          <div id="commentText">
            <textarea id="newComment"></textarea>
          </div>
        </div>

      </div>

    </div>

  </div>
</div>